<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgradient1"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/gradient"
        android:text="ENTER ACTIVITY"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/dreizig"
                        android:layout_width="280dp"
                        android:layout_height="45dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <!--<Spinner-->
                            <!--android:id="@+id/spinner1"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="40dp"-->
                            <!--android:background="@android:drawable/btn_dropdown"-->
                            <!--android:spinnerMode="dropdown"-->
                            <!--app:layout_constraintBottom_toBottomOf="parent"-->
                            <!--app:layout_constraintHorizontal_bias="0.271"-->
                            <!--app:layout_constraintLeft_toLeftOf="parent"-->
                            <!--app:layout_constraintRight_toRightOf="parent"-->
                            <!--app:layout_constraintTop_toTopOf="parent"-->
                            <!--app:layout_constraintVertical_bias="0.033" />-->


                        <EditText
                            android:id="@+id/enter_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Enter Category"
                            android:padding="2dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/first"
                        android:layout_width="30dp"
                        android:layout_height="45dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/button222"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_control_point"

                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.271"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.033" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/twenth"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"


                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/editText20"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Category Selected"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/second"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:backgroundTint="#E1DBF8"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/enter_activity"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Enter Activity"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp"

                            />

                    </LinearLayout>


                </LinearLayout>


                <!-- Second Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/zwansig"
                        android:layout_width="280dp"
                        android:layout_height="45dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:backgroundTint="#E1DBF8"
                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/enter_colour"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:background="@drawable/textinputborder"
                            android:hint=" Select Colour"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/eighteenth"
                        android:layout_width="30dp"
                        android:layout_height="45dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnChoose"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_format_color"


                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.271"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.033" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/third"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"


                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/enter_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Enter Description"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>
                <!-- End Second Row-->
                <!-- Third Row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/fifth"
                        android:layout_width="145dp"
                        android:layout_height="102dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/enter_date"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Date"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>
                <!-- End Third Row-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/seventh"
                        android:layout_width="145dp"
                        android:layout_height="83dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/enter_time"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Time (hh:mm)"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/ninth"
                        android:layout_width="145dp"
                        android:layout_height="97dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/enter_duration"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Duration(hours)"
                            android:inputType="numberDecimal"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">


                    <LinearLayout
                        android:id="@+id/fourteenth"
                        android:layout_width="145dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <EditText
                            android:id="@+id/enter_enddate"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/textinputborder"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="End Date"
                            android:inputType="numberDecimal"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#E1DBF8"
                            android:textColorHint="#E1DBF8"

                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:id="@+id/tenth"
                        android:layout_width="3dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/rep0"
                            android:layout_width="67dp"
                            android:layout_height="55dp"
                            android:layout_marginTop="30dp"



                            android:src="@drawable/ic_repeat_blac"
                            android:textColor="#E1DBF8"

                            android:textColorHint="#E1DBF8"
                            android:textSize="7.5sp"
                            app:layout_constraintVertical_bias="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/twelfth"
                        android:layout_width="148dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:orientation="vertical">


                        <RadioGroup
                            android:id="@+id/radio_Group"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="52dp"

                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintHorizontal_bias="0.548"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.795">

                            <RadioButton
                                android:id="@+id/radio_one"
                                android:layout_width="wrap_content"
                                android:layout_height="49dp"
                                android:buttonTint=" #ffffbb33"
                                android:onClick="checkbutton"
                                android:text="Daily"
                                android:textColor="#E1DBF8"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.108"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.784" />

                            <RadioButton
                                android:id="@+id/radio_two"
                                android:layout_width="wrap_content"

                                android:layout_height="49dp"
                                android:buttonTint=" #ffffbb33"
                                android:onClick="checkbutton"
                                android:text="Weekly"
                                android:textColor="#E1DBF8"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.436"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.784" />

                            <RadioButton
                                android:id="@+id/radio_three"
                                android:layout_width="wrap_content"
                                android:layout_height="49dp"
                                android:buttonTint=" #ffffbb33"
                                android:onClick="checkbutton"
                                android:text="Monthly"
                                android:textColor="#E1DBF8"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintHorizontal_bias="0.4"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.784" />
                        </RadioGroup>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/fifteenth"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:backgroundTint="#E1DBF8"
                        android:orientation="vertical">


                        <Button
                            android:id="@+id/Save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/roundedbutton"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="Submit"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#000000"

                            android:textSize="18sp"

                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/sixteenth"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"

                        android:backgroundTint="#E1DBF8"
                        android:orientation="vertical">


                        <Button
                            android:id="@+id/Display"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="30dp"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="View"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#000000"

                            android:textSize="18sp"

                            />

                        <Button
                            android:id="@+id/Update"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:backgroundTint="@android:color/holo_orange_light"
                            android:hint="View"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textColorHint="#000000"
                            android:textSize="18sp"

                            />

                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

</LinearLayout>